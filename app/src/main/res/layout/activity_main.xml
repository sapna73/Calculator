<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etEnter"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:importantForAutofill="no"
        android:hint="Enter Number"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/edit_text_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="1"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:onClick="operationFunction"
                android:text="2"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:onClick="operationFunction"
                android:text="3"/>
            <Button
                android:id="@+id/btn4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:onClick="operationFunction"
                android:text="/"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:textStyle="bold"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="4"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="5"/>
            <Button
                android:id="@+id/btn7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="6"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="7"/>
            <Button
                android:id="@+id/btn10"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="8"/>
            <Button
                android:id="@+id/btn11"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="9"/>
            <Button
                android:id="@+id/btn12"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn13"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="C"/>
            <Button
                android:id="@+id/btn14"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="0"/>
            <Button
                android:id="@+id/btn15"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="."/>
            <Button
                android:id="@+id/btn16"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:onClick="operationFunction"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>